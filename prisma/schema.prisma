// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  email    String @unique
  password String
  roles    Roles  @relation(fields: [roleId], references: [id])
  roleId   String
}

model Roles {
  id    String  @id @default(uuid())
  title String  @unique
  Users Users[]
}

model Partners {
  id                    String             @id @default(uuid())
  title                 String             @unique
  requirements          String[]
  additionalInformation String?
  categories            Categories         @relation(fields: [categoryId], references: [id])
  categoryId            String
  PartnersOnPlaces      PartnersOnPlaces[]
}

model Categories {
  id       String     @id @default(uuid())
  title    String
  Partners Partners[]
}

model Places {
  id               String             @id @default(uuid())
  adress           String
  latitude         Decimal
  longitude        Decimal
  PartnersOnPlaces PartnersOnPlaces[]
}

model PartnersOnPlaces {
  partners   Partners @relation(fields: [partnersId], references: [id])
  places     Places   @relation(fields: [placesId], references: [id])
  partnersId String
  placesId   String

  @@id([partnersId, placesId])
}
